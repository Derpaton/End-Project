@model End_Project.Models.Albums


@using (Html.BeginForm("Create", "AlbumAdd", FormMethod.Post)) {
    @Html.ValidationSummary(false)
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Add an album</th>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => Model.Name)
            </td>            
        </tr>
        <tr>
            <td>Author: </td>
            <td>
                @Html.TextBoxFor(m => Model.Author)
            </td>
        </tr>
        <tr>
            <td>Genre: </td>
            <td>
                @Html.DropDownListFor(m => Model.Genre, new List<SelectListItem>
                   { new SelectListItem{Text = "Rock", Value = "Rock"},
                   new SelectListItem {Text = "Classic", Value = "Classic"},
                   new SelectListItem {Text = "Country", Value = "Country"},
                   new SelectListItem {Text = "Dansband", Value = "Dansband"},
                   new SelectListItem {Text = "R&B", Value = "R&B"},
                   new SelectListItem {Text = "Gospel", Value = "Gospel"},
                   new SelectListItem {Text = "Metal", Value = "Metal"},
                   new SelectListItem{Text="Other", Value="Other"}}, "Please select")
            </td>
        </tr>
        <tr>
            <td>Year: </td>
            <td>
                @Html.TextBoxFor(m => Model.Year)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}

